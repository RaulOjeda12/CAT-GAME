#include<stdio.h>
#include<conio.h>

int main (void)
{

char mat[3][3]={0};
char marca1='x';
char marca2='o';
char juego='i';
int z, y, f, c;

printf ("Bienvenido al juego del gato \n");

do{


do{

printf ("Jugador 1 introduce las coordenadas donde deseas colocar tu marca \n");
printf ("Fila: \n");
scanf ("%d", &f);
printf ("Columna: \n");
scanf ("%d", &c);

if (f < 0 || f >= 3 || c < 0 || c >= 3 || mat[f][c] != 0)
{
    printf ("La coordenada no es valida, intenta con otra.");
}

} while (f < 0 || f >= 3 || c < 0 || c >= 3 || mat[f][c] != 0);

mat[f][c]=marca1; 

for (z=0;z<3;z++)
{
for (y=0;y<3;y++)
{
    printf ("[%c]", mat[z][y]);
}
printf ("\n");
}


do
{
printf ("Jugador 2 introduce las coordenadas donde deseas colocar tu marca \n");
printf ("Fila: \n");
scanf ("%d", &f);
printf ("Columna: \n");
scanf ("%d", &c);
 
if (f < 0 || f >= 3 || c < 0 || c >= 3 || mat[f][c] != 0)
{
printf ("La coordenada no es valida, intenta con otra. \n");
}

} while (f < 0 || f >= 3 || c < 0 || c >= 3 || mat[f][c] != 0);

mat[f][c]=marca2; 

for (z=0;z<3;z++)
{
for (y=0;y<3;y++)
{
    printf ("[%c]", mat[z][y]);
}
printf ("\n");
}



} while (juego!='i');

